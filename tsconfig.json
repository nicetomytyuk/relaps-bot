{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "module": "NodeNext",
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": [
    "api/**/*",
    "src/**/*"
  ]
}
